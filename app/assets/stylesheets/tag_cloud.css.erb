.tag_cloud {
  list-style-type: none;
  text-align: center;
  margin-left: 0;
  background: #EEE;
  border: 1px solid #CCC;
  padding: 0.5em;
  -webkit-border-radius: 0.7em;
  -moz-border-radius: 0.7em;
  border-radius: 0.7em;
}

.tag_cloud li {
  display: inline-block;
  padding: 0.2em;
  padding-top: 0.4em;
  margin: 1px;
  text-transform: uppercase;
}

.tag_cloud li a {
  text-decoration: none;
  border-bottom-width: 0;
}

.tag_cloud li a:hover {
  border-bottom-width: 1px;
}

.tag1 a {font-size: 1.0em; color: #000;}
.tag2 a {font-size: 1.3em; color: #111;}
.tag3 a {font-size: 1.6em; color: #222;}
.tag4 a {font-size: 1.9em; color: #333;}
.tag5 a {font-size: 2.2em; color: #444;}
.tag6 a {font-size: 2.5em; color: #666;}

.subject.selected {
  border: .2em solid #444;
  padding-left: 1.3em;
  padding-right: 1.3em;
}
.subject.selected:hover {
  background-image: url(<%= image_path "icons/cross.png" %>);
  background-position: right center;
  background-repeat: no-repeat;
}